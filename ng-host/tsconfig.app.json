{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "jsx": "react-jsx",
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../libs/react/src/**/*.ts",
    "../libs/react/src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
